<div style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
  <%if(blog){%>
    <h2 style="color: antiquewhite; color: rgba(0, 0, 0, 0.938) ; font-weight:900;">Edit Blog</h2>
    </br>
        <form action="/api/user/blog/edit_blog/<%= bid %>" method="post" enctype="multipart/form-data">
        <input type="text" name="title" value="<%= blog.title %>"><br><br>
        <input type="text" name="author" value="<%= blog.author %>"><br><br>
        <input type="text" name="category" value="<%= blog.category%>"><br><br>
        <input type="file" name="blog_img" value="<%= JSON.stringify(blog.blog_img) %>"><br><br>
        <textarea name="description" rows="4" cols="50"><%= blog.description %></textarea>
        </br></br>
        <button type="submit">Submit</button>
      </form>
      <%}%>
</div>